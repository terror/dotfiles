#!/bin/bash

# shortcuts
alias c="cd ~/Github/CompetitiveProgramming"
alias gh="cd ~/Github"
alias jac="cd ~/'JAC CompSci'"
alias z="cd ~/Github/kasten"

# Easier navigation: .., ..., ...., ....., ~ and -
# from https://github.com/mathiasbynens/dotfiles/blob/main/.aliases
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# git
alias ga="git add"
alias gc="git commit"
alias gca="git commit --amend --no-edit"
alias gd="git diff"
alias gch="git checkout"
alias gst="git status"
alias gp="git push -u origin master"
alias gpf="git push -f origin master"
alias gpo="git push origin"
alias gb="git branch"
alias gcb="git checkout -b"

# ls
alias l="ls"
alias ll="ls -lah"
alias la="ls -a"
alias sl="ls"
alias lt="tree -L 1"

# commands
alias v="nvim"
alias vi="nvim"
alias ov="vim"
alias e="exit"
alias g="git"
alias m="tmux"
alias j="just"
alias pv="pipenv"

# reload the shell
alias reload="exec ${SHELL} -l"

# open new chrome window
alias chrome='/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome'

# open cordless 
alias discord='cordless'

# open last modified vim file
alias lv='nvim -c "normal '\''0"'

# upgrade pip
alias upip='pip install --upgrade pip'

# source ~/.bash_profile
alias sb='source ~/.bash_profile'

# get wifi password
alias wifi='wifi-password'

# spinning globe
alias gl='globe -s'
