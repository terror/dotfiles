#!/usr/bin/env bash

if ! command -v fzf &> /dev/null; then
  echo "error: fzf is not installed. Please install fzf first."
  exit 1
fi

options=("codex" "claude" "cursor" "gemini")

selected=$(printf '%s\n' "${options[@]}" | fzf --height=10 --border)

if [[ -z "$selected" ]]; then
  exit 0
fi

case "$selected" in
  "claude")
    claude --dangerously-skip-permissions
    ;;
  "codex")
    codex --dangerously-bypass-approvals-and-sandbox
    ;;
  "cursor")
    cursor-agent --force
    ;;
  "gemini")
    gemini --yolo
    ;;
  *)
    exit 1
    ;;
esac
