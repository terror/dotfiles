#!/usr/bin/env bash

set -euo pipefail

require brew colour crates nvim rustup

colour cyan "==> Homebrew"
brew evolve

colour cyan "==> Rust toolchain"
rustup update

colour cyan "==> Rust crates"
crates

colour cyan "==> Neovim plugins and language servers"
nvim --headless "+Lazy! sync" "+MasonUpdate" +qa

colour green ""
colour green "All updates complete âœ”"
