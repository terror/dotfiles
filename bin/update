#!/usr/bin/env bash

set -euo pipefail

cyan()  { printf '\033[36m%s\033[0m\n' "$*"; }
green() { printf '\033[32m%s\033[0m\n' "$*"; }

cyan "==> Homebrew"
brew evolve

cyan "==> Rust toolchain"
rustup update

cyan "==> Rust crates"
crates

cyan "==> Neovim plugins and language servers"
nvim --headless \
  "+Lazy! sync" \
  "+MasonUpdate" \
  +qa

green ""
green "All updates complete âœ”"
