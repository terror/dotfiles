#!/usr/bin/env bash

set -euo pipefail

cd "$HOME/dotfiles/bin" || exit 1

selection="$(
  fd | fzf \
    --height 90% \
    --min-height 20 \
    --bind 'ctrl-\:toggle-preview' \
    --bind 'ctrl-k:preview-up,ctrl-j:preview-down' \
    --preview 'bat --style=numbers --color=always --line-range :500 {}' \
    --preview-window 75% \
    --border \
    --ansi
)" || exit 0

[[ -n "$selection" ]] || exit 0

exec "$selection"
