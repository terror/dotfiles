#!/usr/bin/env bash

write_justfile() {
  cat << 'EOF' > "$1"
set dotenv-load

export EDITOR := 'vim'

default:
  just --list
EOF
}

function main() {
  name="$1"

  mkdir "$name" && \
    cd "$name" || exit

  git init && \
    git remote add origin https://github.com/terror/"$name".git

  files=(
    ".gitignore"
    "README.md"
    "justfile"
  )

  for f in "${files[@]}"; do
    touch "$f"
  done

  echo "## $name" >> README.md
  write_justfile justfile
  echo "/.DS_Store" >> .gitignore
}

main "$@"
