#!/bin/bash

function has() {
  case $1 in
    b | B | brew)
      brew list | rg "$2"
      ;;
    p | P | pip)
      pip3 list | rg "$2"
      ;;
    c | C | cargo)
      cargo install --list | rg "$2"
      ;;
    *)
      echo 'Unknown package manager.'
      ;;
  esac
}

if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
  has "$1" "$2"
fi
